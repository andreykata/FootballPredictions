@model UpdateDetailsFM
@{
    ViewData["Title"] = "Update DB";
}

<h2>@ViewData["Title"]</h2>
 
<div class="row table-bordered">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Make analyzes for next games</h4>
            <hr />
            <p>@Model.DatesInfo</p>
            <div asp-validation-summary="All" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="NextGamesDate"></label>
                <input asp-for="NextGamesDate" class="form-control"/>
                <span asp-validation-for="NextGamesDate" class="text-danger"></span>
                <small>Date: @DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()</small>
            </div>          
            <button type="submit" class="btn btn-default btn-primary">Update DB</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}