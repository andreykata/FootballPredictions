@model EditGameSM
@{
    ViewData["Title"] = "EditGame";
}

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group hidden">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group hidden">
                <label asp-for="MatchDate"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="LeagueUniqueName"></label>
                <input asp-for="LeagueUniqueName" class="form-control" disabled/>
                <span asp-validation-for="LeagueUniqueName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="HomeTeamName"></label>
                <input asp-for="HomeTeamName" class="form-control" disabled/>
                <span asp-validation-for="HomeTeamName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="AwayTeamName"></label>
                <input asp-for="AwayTeamName" class="form-control" disabled/>
                <span asp-validation-for="AwayTeamName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="FullTimeResult.HomeTeamGoals"></label>
                <input asp-for="FullTimeResult.HomeTeamGoals" class="form-control" min="0" max="50"/>
                <span asp-validation-for="FullTimeResult.HomeTeamGoals" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="FullTimeResult.AwayTeamGoals"></label>
                <input asp-for="FullTimeResult.AwayTeamGoals" class="form-control" min="0" max="50"/>
                <span asp-validation-for="FullTimeResult.AwayTeamGoals" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Edit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

